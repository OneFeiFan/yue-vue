{
  "compilerOptions": {
    "target": "es5", // 或者更高版本
    "lib": ["es2015", "dom"], // 确保包含 'es2015'
    "allowJs": true,
//    "checkJs": true,               // 启用对 JavaScript 的类型检查
//    "noEmit": false,                // 不生成任何输出文件
    "strict": true,                // 启用所有严格类型检查选项
    "esModuleInterop": true,       // 确保与模块系统的兼容性
    "skipLibCheck": true,          // 跳过库文件的类型检查
    "forceConsistentCasingInFileNames": true,  // 确保文件名大小写一致
//    "moduleResolution": "nodenext", // 使用 Node.js 风格的模块解析策略
    "outDir": "./unpackage/dist",
    "types": [
      "@uni-helper/uni-app-types",
      "@dcloudio/types"
    ]
  },
  "include": [
    "model/*.ts",                     // 包括需要检查的文件
    "service/*.ts"
  ]
}
